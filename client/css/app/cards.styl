.cards
  height: 250px
  overflow: hidden
  overflow-x: scroll
  overflow-y: hidden
  margin: 0 auto
  white-space: nowrap

  .card
    height: 150px
    margin: 20px 10px
    display: inline-block
    box-shadow: 0 0 20px rgba(255,255,255,0.1)

    img
      height: 150px

    .name
      background: #fff
      color: #666
      margin: 0
      padding: 15px 0
      font-size: 14px
      height: 50px

::-webkit-scrollbar
  -webkit-appearance: none;
  width: 7px;

::-webkit-scrollbar-thumb
  border-radius: 4px;
  background-color: rgba(0,0,0,.5);
  box-shadow: 0 0 1px rgba(255,255,255,.5);
